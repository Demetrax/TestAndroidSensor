
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1" >
    <TextView
        android:text="Text"
        android:layout_width="69.5dp"
        android:layout_height="22.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/tvAppName" />
        <TextView
        android:text="Text"
        android:layout_width="282.5dp"
        android:layout_height="22.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/tvAccX" />
    <TextView
        android:text="Text"
        android:layout_width="222.0dp"
        android:layout_height="22.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/tvAccY" />
    <TextView
        android:text="Text"
        android:layout_width="222.0dp"
        android:layout_height="22.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/tvAccZ" />
    <Button
        android:text="Play local sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btPlaySound" />
    <Button
        android:text="Play internet sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btPlayStream" />
    <TextView
        android:text="Orientation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quaw" />
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quax" />
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quay" />
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quaz" />
    <TextView
        android:text="Pitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pitch" />
    <TextView
        android:text="Roll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/roll" />
    <TextView
        android:text="Gyroscope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gyroX" />
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gyroY" />
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gyroZ" />
</LinearLayout>